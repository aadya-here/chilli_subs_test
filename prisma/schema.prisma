generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url = env("DATABASE_URL")
}

model Publication {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId
  name                  String
  guidelineLinks        String[]
  openSubmissionTypes   String[]
  closedSubmissionTypes String[]
  sourceUrl             String
  lastSeenAt            DateTime

  @@unique([name, sourceUrl])
}

model Source {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  key       String    
  name      String   @unique   
  puburl    String

  createdAt DateTime @default(now())
}

model PublicationInfo {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  title        String?
  baseURL      String?
  pubURL       String?
  guidelineURL String?
  description  String?
  genres       String[]
  submissions  Json?      // store array of submission objects: { genre, description, subURL, subDate, subTime, subTimezone }
  sourceUrl    String
  isOpen       Boolean?
  updatedAt    DateTime   @updatedAt

  @@unique([name, sourceUrl])
}
